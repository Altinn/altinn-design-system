{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@sb/*": ["./.storybook/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/.eslintrc.js"]
}
