{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@sb/*": ["./.storybook/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/.eslintrc.js",
    "scripts/add-component.mjs"
  ]
}
